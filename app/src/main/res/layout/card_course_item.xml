<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_course_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="8dp"
    style="@style/CardView.Light">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@drawable/course_image"
            android:scaleType="centerCrop"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tecnologías móviles"
            android:textSize="18sp"
            android:textColor="@color/darkTextColor"
            android:layout_marginStart="18dp"
            android:layout_marginTop="15dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp"
            android:layout_marginStart="18dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Aula: "
                android:textSize="12sp"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:layout_marginStart="0dp"
                android:textColor="@color/grey_color"/>

            <TextView
                android:id="@+id/nombreAula"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A-301"
                android:textSize="12sp"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:layout_marginStart="4dp"
                android:textColor="@color/grey_color"/>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="José Sulla Torres"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:layout_marginStart="18dp"
            android:layout_marginTop="8dp"/>

        <LinearLayout
            android:id="@+id/expandableLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/primerTurno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="- Lunes: 9:00 - 11:00"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:layout_marginStart="18dp"
                android:layout_marginEnd="10dp"
                android:textColor="@color/grey_color"/>

            <TextView
                android:id="@+id/segundoTurno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="- Martes: 9:00 - 11:00"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:layout_marginStart="18dp"
                android:layout_marginEnd="10dp"
                android:textColor="@color/grey_color"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#88888888"
                android:layout_marginStart="18dp"
                android:layout_marginEnd="18dp"
                android:layout_marginTop="15dp"/>
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">
                
                <Button
                    android:id="@+id/btnAsistenciaIngreso"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:text="Ingreso"
                    android:textSize="13sp"
                    android:background="@drawable/login_button"
                    android:textColor="@color/white"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:elevation="0dp"/>

                <Button
                    android:id="@+id/btnAsistenciaSalida"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:text="Salida"
                    android:textSize="13sp"
                    android:background="@drawable/login_button"
                    android:textColor="@color/white"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:elevation="0dp"/>
                
            </LinearLayout>

        </LinearLayout>
        
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#88888888"
            android:layout_marginTop="10dp"/>

        <Button
            android:id="@+id/expandBtn"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="MARCAR ASISTENCIA"
            android:textColor="@color/blue_500"
            android:background="@drawable/ripple_effect"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:layout_marginStart="12dp"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>